<div class="help">
    <h2>{{ order.title }} {{ 'management'|trans }}</h2>
</div>

{#
    "plugin" variable contains partial name, ie: plugin_PLUGINNAME_manage.html
    "service" variable contains product configuration + order form values as key value pairs
#}

{# include plugin #}

<form method="post" action="{{ 'api/admin/serviceproxmoxbackup/update'|link }}" class="save api-form" data-api-msg="Service updated">
    <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
    <fieldset>

        <div class="rowElem">
            <label class="topLabel">Username:</label>
                <div class="formBottom">
                    <input name="config[username]" value="{{ service.username }}"/>
                </div>
            <div class="fix"></div>
        </div>

        <div class="rowElem">
            <label class="topLabel">Password:</label>
                <div class="formBottom">
                    <input name="config[password]" value="{{ service.password }}"/>
                </div>
            <div class="fix"></div>
        </div>

        <div class="rowElem">
            <label class="topLabel">Datastore:</label>
                <div class="formBottom">
                    <input name="config[datastore]" value="{{ service.datastore }}"/>
                </div>
            <div class="fix"></div>
        </div>

        <div class="rowElem">
            <label class="topLabel">Server hostname:</label>
                <div class="formBottom">
                    <input name="config[hostname]" value="{{ service.hostname }}"/>
                </div>
            <div class="fix"></div>
        </div>


        <input type="hidden" name="order_id" value="{{ order.id }}">
        <input type="submit" value="{{ 'Update'|trans }}" class="btn btn-primary submitForm">
    </fieldset>
</form>
